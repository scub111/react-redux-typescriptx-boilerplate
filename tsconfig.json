{
   "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "module": "commonjs",
      "jsx": "react",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      // "noUnusedLocals": true,
      "allowJs": true,
      "lib": [
         "dom",
         "es5",
         "es6",
         "es7",
         "esnext",
      ],
      "target": "es5",
      "allowSyntheticDefaultImports": true
   },
   "include": [
      "./src/**/*"
   ]
}